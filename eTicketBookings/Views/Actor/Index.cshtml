@model IEnumerable<Actor>
@{ 
    ViewData["Title"] = "List Of Actors";
}
<div class="row align-middle">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.profilePictureUrl)</th>
                    <th>@Html.DisplayNameFor(model => model.fullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="@item.profilePictureUrl" style="max-width:150px" />
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(model => item.fullName)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(model => item.Bio)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-info" asp-controller="Actor" asp-action="Edit" asp-route-id="@item.id"><i class="bi bi-pencil-square"></i>Edit</a>|
                        <a asp-controller="Actor" asp-action="Details" asp-route-id="@item.id" class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>|
                        <a class="btn btn-danger text-white" asp-controller="Actor" asp-action="Delete" asp-route-id="@item.id"><i class="bi bi-trash"></i>Delete</a>


                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

</div>
<div style="position:fixed; right:25px;bottom:25px;" class="text-white">
    <a asp-controller="Actor" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add Actor</a>
</div>